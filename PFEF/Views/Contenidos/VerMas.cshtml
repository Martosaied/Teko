@model PFEF.ViewModels.DetailsViewModel



<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
    <style>
        div.stars {
            width: 270px;
            display: inline-block;
        }

        input.star {
            display: none;
        }

        label.star {
            float: right;
            padding: 10px;
            font-size: 36px;
            color: #444;
            transition: all .2s;
        }

        input.star:checked ~ label.star:before {
            content: '\f005';
            color: #FD4;
            transition: all .25s;
        }

        input.star-5:checked ~ label.star:before {
            color: #FE7;
            text-shadow: 0 0 20px #952;
        }

        input.star-1:checked ~ label.star:before {
            color: #F62;
        }

        label.star:hover {
            transform: rotate(-15deg) scale(1.3);
        }

        label.star:before {
            content: '\f006';
            font-family: FontAwesome;
        }

        .txt{
            font-size: 0.8em;
        }



 
    </style>
</head>
<body>
    <div>
        <div>
            <h1>@Model.Nombre</h1>
            <h6><small>Subido el @Model.FechaSubida por @Model.Usuarios.Nombre</small></h6>
            <p>@Model.Descripcion</p>
        </div>
        <hr />
            <div class="jumbotron row">
                <h6 class="col-md-4 col-sm-6 txt">Materia: <b>@Model.Materias.Nombre</b></h6>
                <h6 class="col-md-4 col-sm-6 txt">Tipo : <b>@Model.TiposContenidos.Nombre</b></h6>
                <h6 class="col-md-4 col-sm-6 txt">Nivel educativo: <b>@Model.Escuelas.NivEduEscuela.Nombre</b></h6>
                <h6 class="col-md-4 col-sm-6 txt">Profesor: <b>@Model.Profesor</b></h6>
                <h6 class="col-md-4 col-sm-6 txt">Escuelas: <b>@Model.Escuelas.Nombre</b></h6>
                <h6 class="col-md-4 col-sm-6 txt">Cursada: <b>Año @Model.Cursada</b></h6>
            </div>
        <hr />
        <div>
            
            <iframe src=@ViewBag.URL style="border: none; width:100%; height:780px;"></iframe>
        </div>
        <div>    
            @{
                if (Request.IsAuthenticated)
                {
                    
                    int Id = Model.Id;
                    @Html.ActionLink("Descargar!", "Descargar", "Contenidos", new { ID = Id}, new { @class = "btn btn-embossed btn-primary row" })
                    using (Ajax.BeginForm("Valoration", "Contenidos", new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "Valoration"
                    }))
                    {
                        <div class="stars" id="stars">
                            <input type="hidden" value="@Model.Id" name="Id" />
                            <input type="hidden" value="@Model.ValoracionPromedio" name="Val" />
                            <input class="star star-5" id="star-5" type="radio" name="star" value="5"  qonchange="this.form.submit()" />
                            <label class="star star-5" for="star-5"></label>
                            <input class="star star-4" id="star-4" type="radio" name="star" value="4"  qonchange="this.form.submit()"/>
                            <label class="star star-4" for="star-4"></label>
                            <input class="star star-3" id="star-3" type="radio" name="star" value="3"   qonchange="this.form.submit()"/>
                            <label class="star star-3" for="star-3"></label>
                            <input class="star star-2" id="star-2" type="radio" name="star" value="2"   oqnchange="this.form.submit()"/>
                            <label class="star star-2" for="star-2"></label>
                            <input class="star star-1" id="star-1" type="radio" name="star" value="1" qonchange="this.form.submit()" />
                            <label class="star star-1" for="star-1"></label>
                        </div>
                        <button type="submit" class="btn btn-success btn-xs">Valorar</button>
                    }
                    @Html.Partial("_Valoration")
                }
                else
                {
                    <div class="row form-inline">
                        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= "btn btn-embossed btn-primary"})
                        <p>Necesita estar logueado para poder descargar el contenido</p>
                    </div>
                }
                @Html.Partial("_SingleRecom")
            }

        </div>

    </div>
</body>
</html>