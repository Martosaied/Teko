@{
    ViewBag.Title = "Home Page";
}
<style>
    .btnmio{
        margin-bottom:10px;
    }
    .title {
        display: inline-block;
    }
</style>
<div class="jumbotron">
    <h1>Teko</h1>
    <p class="lead">Teko es una herramienta que te permitira salir de un apuro escolar</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>
<hr />
<div>
    <div>
            <h2 class="text-center title">Subidos recientemente</h2>
            <a href="@Url.Action("VerTodo", "Contenidos",new { Title="Mas recientes"})" type="button" class="btnmio btn btn-default" id="tarj">Ver todo</a>
        @{
            ViewBag.Controles = "MasRec";
        }
        <div class="row" style="margin:1%;">
            @Html.Partial("_Carrousel")
        </div>
    </div>
    <hr style="color: #0056b2; margin-top:20px; margin-bottom:20px;" />
    <div>
        <h2 class="text-center title">Mas populares</h2>
        <a href="@Url.Action("VerTodo", "Contenidos",new { Title="Mas populares"})" type="button" class="btnmio btn btn-default id="tarj">Ver todo</a>
        @{
            ViewBag.ListaArticulos = ViewBag.ListaArticulosPop;
            ViewBag.Controles = "MasPop";
        }
        <div class="row" style="margin:1%;">
            @Html.Partial("_Carrousel")
        </div>
    </div>
    <hr style="color: #0056b2; margin-top:20px; margin-bottom:20px;" />
    <div>
        <h2 class="text-center title" >Mas descargados</h2>
        <a href="@Url.Action("VerTodo", "Contenidos",new { Title="Mas descargados"})" type="button" class="btnmio btn btn-default" id="tarj">Ver todo</a>
        @{
            ViewBag.ListaArticulos = ViewBag.ListaArticulosDes;
            ViewBag.Controles = "MasDes";
        }
        <div class="row" style="margin:1%;">
            @Html.Partial("_Carrousel")
        </div>
    </div>
    <hr style="color: #0056b2; margin-top:20px; margin-bottom:20px;" />
    <div>
        <h2 class="text-center title">Mas valorados</h2>
        <a href="@Url.Action("VerTodo", "Contenidos",new { Title="Mas valorados"})" type="button" class="btnmio btn btn-default" id="tarj">Ver todo</a>
        @{
            ViewBag.ListaArticulos = ViewBag.ListaArticulosVal;
            ViewBag.Controles = "MasVal";
        }
        <div class="row" style="margin:1%;">
            @Html.Partial("_Carrousel")
        </div>
    </div>
    @{ if (Request.IsAuthenticated && User.Identity.GetUserInfoId().InstitucionActual != null && ViewBag.ListaArticulosEsc.Length >= 9)
        {
            <hr style="color: #0056b2; margin-top:20px; margin-bottom:20px;" />
            <div>
                <h2 class="text-center title">Contenidos de @User.Identity.GetUserInfoId().InstitucionActual.Nombre</h2>
                <a href="@Url.Action("VerTodo", "Contenidos",new { Title="Escuela"})" type="button" class="btnmio btn btn-default" id="tarj">Ver todo</a>
                @{
                    ViewBag.ListaArticulos = ViewBag.ListaArticulosEsc;
                    ViewBag.Controles = "MasEsc";
                }
                <div class="row" style="margin:1%;">
                    @Html.Partial("_Carrousel")
                </div>
            </div>
          }
       }
    
</div>
