@using PFEF.Models.ViewModels;
@model PerfilViewModel
@{
    ViewBag.Title = "Home de usuario";
}
@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type='text/javascript' src='~/Scripts/jquery.unobtrusive-ajax.js'></script>Quitar estos dos paquetes y bundearlos*@

<body>
    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="~/Content/ProfilePH/@Model.RutaFoto" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            @Model.Nombre @Model.Apellido
                        </div>
                        <div class="profile-usertitle-job">
                            Estudiante en @Model.InstitucionActual.Nombre
                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <a href="@Url.Action("AbrirSubidas","Contenidos")" class="btn btn-success btn-sm">Ver subidas</a>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                    <!-- SIDEBAR MENU -->
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li class="active">
                                <a href="#">
                                    <i class="glyphicon glyphicon-home"></i>
                                    Perfil
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Manage")">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Ajustes de la cuenta
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("LlenarPerfil", "Usuarios")">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Editar perfil
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    @Html.Partial("_Recommendation")
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>

</body>
